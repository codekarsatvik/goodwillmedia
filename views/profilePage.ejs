
<%- include('partials/mainlayout') %>
<%- include('partials/postModal') %>
<script> var profileUserId =   '<%-payload.profileUser._id%>'
var selectedTab = '<%- payload.selectedTab %>' </script> 
<div class="upperProfile">
    <div class="backgroundSection" ><img src="<%= payload.profileUser.coverPic %>"  class="coverPic">
    <% if(payload.profileUser._id == payload.userLoggedIn._id){ %>
          <button class="coverPictureButton" data-toggle ="modal" data-target="#coverPictureModal"><i class="fa fa-camera"></i></button>
          
            
     
      <%}%>
    </div>  

    <div class="userImageContainer"><img src="<%= payload.profileUser.profilePic %> "onerror="this.onerror=null; this.src='/images/profilePic.jpeg'" alt="Profile pIc">
      <% if(payload.profileUser._id == payload.userLoggedIn._id){ %>
          <button class="profilePictureButton" data-toggle ="modal" data-target="#profilePictureModal"><i class="fa fa-camera"></i></button>
          
            
     
      <%}%>
    </div>  
    <div class="profilePageButtons">
      <% if(payload.profileUser._id != payload.userLoggedIn._id){ %>
          <a href= '/messages/<%= payload.profileUser._id %>' class="profileButton"><i class="fa fa-envelope"></i></a>
          <% var isFollowng = payload.profileUser.followers.includes(payload.userLoggedIn._id) ? "Following" : "Follow" ; console.log(payload.profileUser.followers.includes(payload.userLoggedIn._id)) ;%>
            
          <a class="followButton <%= isFollowng %>" data-id = "<%= payload.profileUser._id %>"><i class="fa fa-user-plus"></i> <%= isFollowng %></a> 
      <%}%>
    </div>
    <div class="userDetails">
      <span class="displayName"><%= payload.profileUser.firstName %> <%= payload.profileUser.lastName %></span>
      <span class="username">@<%= payload.profileUser.username %></span>
      <span class="description"><%= payload.profileUser.description %></span>
      <div class="followersContainer">
           <a href="/profile/<%= payload.profileUser.username %>/following">
            <span class= "value"><%= payload.profileUser.following.length %></span>
            <span>Following</span>
          </a>
          <a href="/profile/<%= payload.profileUser.username %>/followers">
            <span class= "value"><%= payload.profileUser.followers.length %></span>
            <span>Followers</span>
            
          </a>
      </div>
    </div>
    <div class="tabsContainer">
      <% var isViewedPost =  payload.selectedTab == 'posts' ? "tab active" : "tab" ; var isViewedReply =  payload.selectedTab == 'replies' ? "tab active" : "tab" %>
      <a href='/profile/<%= payload.profileUser.username %>' class="<%=isViewedPost%>">Posts</a>
      <a href='/profile/<%= payload.profileUser.username %>/replies' class="<%=isViewedReply%>">Replies</a>
    </div>
    <!-- <div class="userSection"></div> -->
</div>
<div class="postsContainer">

</div>


</div>
<div class="d-none d-md-block col-md-2 col-lg-4"></div>
</div>
</div>

